<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top_news_item"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/iv_left_top_view"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/arrow"/>
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农头条"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_top_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时限量抢半价"
                android:layout_marginBottom="5dp"
                android:textColor="@color/hint_gray"
                android:textSize="12sp"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/iv_goods_1"
                android:background="@drawable/corner_indicator_bg"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_goods_2"
            android:background="@drawable/corner_indicator_bg"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



</LinearLayout>